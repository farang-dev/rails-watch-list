<div class="container">
<h3 class="mt-3"><%= @list.name.capitalize %></h3>
<div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-lg-4 col-md-6 mb-4 mt-2">
        <div class="card h-100">
          <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Rating: <%= bookmark.movie.rating %>/5</li>
            <li class="list-group-item">Recommended by: F</li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

<br>
<%= link_to 'Add a Comment to a Movie', new_list_bookmark_path(@list), class: "btn btn-primary" %>

<br>
<br>
<%= link_to "Back to the Lists", lists_path, class: "btn btn-primary mb-4" %>

</div>
