<div class="container">
  <h3 class="mt-3">Select a Genre & Leave a Comment!</h3>
  <ul class="list-group mt-3">
    <% @lists.each do |list| %>
      <li class="list-group-item">
        <%= link_to list.name.capitalize, list_path(list) %>
      </li>
    <% end %>
  </ul>

  <br>

  <%= link_to "Add a List", new_list_path, class: "btn btn-primary mb-4" %>

</div>
